.row
  .col-md-2
    = link_to product_path(product) do
      = image_tag(product.image_url, :width => 150, :class => 'img-circle')
  .col-md-10
    %h3= product.title
    = product.description
    %p.text-info= humanized_money_with_symbol(product.price)
    %ul.list-unstyled
      - product.sales.each do |sale|
        %li= sale.title
    = button_to 'Add to Cart', line_items_path(:line_item => {product_id: product}), :class => 'btn btn-success', remote: true
